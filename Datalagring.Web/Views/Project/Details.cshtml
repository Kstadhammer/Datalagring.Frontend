@model Datalagring.Web.Models.ProjectViewModel

@{
    ViewData["Title"] = "Project Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="card-title mb-0">Project Details</h2>
                        <span class="badge bg-secondary">@Model.ProjectNumber</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h3 class="h5 mb-3">Basic Information</h3>
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Customer)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProjectManager)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProjectManager)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h3 class="h5 mb-3">Timeline</h3>
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.StartDate)</dt>
                                <dd class="col-sm-8">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EndDate)</dt>
                                <dd class="col-sm-8">@Model.EndDate.ToString("yyyy-MM-dd")</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                                <dd class="col-sm-8">
                                    <span class="badge rounded-pill @(Model.Status switch
                                    {
                                        ProjectStatus.NotStarted => "bg-secondary",
                                        ProjectStatus.InProgress => "bg-primary",
                                        ProjectStatus.Completed => "bg-success",
                                        _ => "bg-secondary"
                                    })">
                                        @Model.Status
                                    </span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <h3 class="h5 mb-3">Financial Information</h3>
                            <dl class="row">
                                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Service)</dt>
                                <dd class="col-sm-10">@Html.DisplayFor(model => model.Service)</dd>

                                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TotalPrice)</dt>
                                <dd class="col-sm-10">@Model.TotalPrice.ToString("C")</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.ProjectNumber" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 